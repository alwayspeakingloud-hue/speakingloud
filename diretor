<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import { getAuth, createUserWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
import {
  getFirestore,
  collection,
  addDoc,
  getDocs,
  deleteDoc,
  doc
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

import { getApps } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";

import { onAuthStateChanged } from 
"https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

const firebaseConfig = {
  apiKey: "AIzaSyCxeGPkMp6MtrIDYtSqq31xhrEnExq5xf8",
  authDomain: "speaking-loud.firebaseapp.com",
  projectId: "speaking-loud",
  storageBucket: "speaking-loud.firebasestorage.app",
  messagingSenderId: "1002979647448",
  appId: "1:1002979647448:web:6dc375319cd8ac3aeadcad",
  measurementId: "G-7LSB30922J"
};

const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);

/* üîí PROTE√á√ÉO DO DIRETOR ‚Äî APENAS UMA VEZ */
onAuthStateChanged(auth, (user) => {
  if (!user || user.email !== "gustavoimarzinotti@speakingloud.com") {
    window.location.href = "../index.html";
  }
});

/* AUTH SECUND√ÅRIO PARA CRIAR SECRET√ÅRIOS */
let secondaryAuth;

try {
  const secondaryApp = initializeApp(firebaseConfig, "SecondarySecretario");
  secondaryAuth = getAuth(secondaryApp);
} catch {
  secondaryAuth = getAuth(
    getApps().find(app => app.name === "SecondarySecretario")
  );
}

window.salvarUsuario = async function () {
    const nomeVal = nome.value.trim();
    const loginVal = login.value.trim();
    const senhaVal = senha.value.trim();

    if (!nomeVal || !loginVal || !senhaVal) {
        alert('Preencha todos os campos');
        return;
    }

    const emailFirebase = loginVal + "@speakingloud.com";

    try {
        // cria no AUTH
        await createUserWithEmailAndPassword(
            secondaryAuth,
            emailFirebase,
            senhaVal
        );

        // salva no FIRESTORE
        await addDoc(collection(db, "secretarios"), {
            nome: nomeVal,
            login: loginVal,
            criadoEm: new Date()
        });

        alert(
          `Secret√°rio criado com sucesso!\n\nNome: ${nomeVal}\nLogin: ${loginVal}`
        );

        limparCampos();
        renderUsuarios();

    } catch (error) {
        if (error.code === "auth/email-already-in-use") {
            alert("Esse login j√° existe");
        } else {
            alert("Erro ao criar usu√°rio");
            console.error(error);
        }
    }
};

window.excluirUsuario = async function (id, login) {
    const confirmar = confirm(
        `Deseja excluir o secret√°rio "${login}"?\n\n` +
        `‚ö†Ô∏è Isso remove o acesso ao sistema.`
    );

    if (!confirmar) return;

    try {
        await deleteDoc(doc(db, "secretarios", id));
        alert("Secret√°rio removido com sucesso!");
        renderUsuarios();
    } catch (e) {
        console.error(e);
        alert("Erro ao excluir secret√°rio");
    }
};

function limparCampos(){
    nome.value = "";
    login.value = "";
    senha.value = "";
}

window.logout = function () {
    window.location.href = "/index.html";
};

async function renderUsuarios() {
    listaUsuarios.innerHTML = "";

    const snapshot = await getDocs(collection(db, "secretarios"));

    if (snapshot.empty) {
        listaUsuarios.innerHTML = `
            <tr>
                <td colspan="3">Nenhum secret√°rio cadastrado.</td>
            </tr>
        `;
        return;
    }

    snapshot.forEach(docSnap => {
        const u = docSnap.data();
        const id = docSnap.id;

        listaUsuarios.innerHTML += `
        <tr>
            <td>${u.nome}</td>
            <td>${u.login}</td>
            <td>
                <button class="delete"
                    onclick="excluirUsuario('${id}', '${u.login}')">
                    Excluir
                </button>
            </td>
        </tr>`;
    });
}


renderUsuarios();

</script>

